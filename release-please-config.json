{
  "packages": {
    "pkg/one": {
      "release-type": "simple",
      "component": "app-one"
    },
    "pkg/two": {
      "release-type": "simple",
      "component": "app-two"
    },
    "pkg/three": {
      "release-type": "simple",
      "component": "app-three"
    },
    "pkg/go": {
      "release-type": "go",
      "component": "app-go"
    }
  },
  "separate-pull-requests": true,
  "changelog-path": "CHANGELOG.md",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": false,
  "draft": false,
  "prerelease": false,
  "include-component-in-tag": true,
  "tag-separator": "-",
  "changelog-sections": [
    {"type": "feat", "hidden": false, "section": "Features"},
    {"type": "fix", "hidden": false, "section": "Bug Fixes"},
    {"type": "deps", "hidden": true, "section": "Dependency Updates"},
    {"type": "chore", "hidden": true, "section": "Chores"}
  ],
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
